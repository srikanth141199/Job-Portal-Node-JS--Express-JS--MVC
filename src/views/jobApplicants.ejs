<section class="jobApplicants-container">
  <table class="table table-striped table-hover">
      <caption>List of Applicants</caption>
      <thead class="table-light">
        <tr>
          <th scope="col"></th>
          <th scope="col">Name</th>
          <th scope="col">E mail</th>
          <th scope="col">Contract</th>
          <th scope="col">Resume</th>
        </tr>
      </thead>
      <tbody>
        <% if(job){%> 
          <% let index = 1; %>
          <%job.applicants.forEach( obj => {%>
            <tr>
              <th scope="row"><%= index %></th>
              <td><%= obj.name%></td>
              <td><%= obj.email%></td>
              <td><%= obj.contract%></td>
              <td><button class="viewBtn btn btn-primary" type="button">view</button></td>
            </tr>
            <% index++; %>
          <%})%>
        <%}%>
      </tbody>
    </table>
    <script>
      document.querySelectorAll('.viewBtn').forEach(button => {
          button.addEventListener('click', function() {
              var pdfUrl = '../public/uploads/example.png'; // URL of the PDF file
              window.open(pdfUrl, '_blank'); // Open a new window with the PDF file
          });
      });
  </script>
</section>
